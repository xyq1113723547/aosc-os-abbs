PKGNAME=postgresql
PKGSEC=database
PKGDEP="krb5 libxml2 linux-pam openssl python-3 readline tcl util-linux libxslt"
BUILDDEP="docbook2x python-2 perl tcl "
PKGDES="A sophisticated object-relational DBMS"

AUTOTOOLS_AFTER="--datadir=/usr/share/postgresql \
                 --with-gssapi \
                 --with-libxml \
                 --with-openssl \
                 --with-perl \
                 --with-python \
                 --with-tcl \
                 --with-pam \
                 --with-libxslt \
                 --with-system-tzdata=/usr/share/zoneinfo \
                 --with-uuid=e2fs \
                 --enable-nls \
                 --enable-thread-safety \
                 PYTHON=/usr/bin/python3"
AUTOTOOLS_AFTER__RISCV64=" \
                 ${AUTOTOOLS_AFTER} \
                 --disable-spinlocks"

AUTOTOOLS_AFTER__LOONGARCH64=" \
                 ${AUTOTOOLS_AFTER} \
                 --disable-spinlocks"
ABMK="world"
ABSHADOW=0
RECONF=0
NOSTATIC=0
