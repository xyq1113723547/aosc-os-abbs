PKGNAME=gdm
PKGSEC=gnome
PKGDEP="accountsservice dconf desktop-base libcanberra linux-pam upower \
        gnome-session wayland plymouth "
BUILDDEP="gobject-introspection gtk-doc intltool itstool yelp-tools"
PKGDES="GNOME Display Manager"

MESON_AFTER="-Ddefault-pam-config=arch \
             -Dgdm-xsession=true \
             -Dgroup=gdm \
             -Dipv6=true \
             -Dplymouth=enabled
             -Duser=gdm \
             -Duser-display-server=true \
             -Dwayland-support=true"
