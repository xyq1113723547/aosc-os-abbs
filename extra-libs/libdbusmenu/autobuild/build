cp /sources/config.* .
mkdir build-gtk{2,3}
cd build-gtk2
../configure ${AUTOTOOLS_DEF} ${AUTOTOOLS_AFTER} \
            --with-gtk=2
make
make install DESTDIR=$PKGDIR

cd $SRCDIR/build-gtk3
../configure ${AUTOTOOLS_DEF} ${AUTOTOOLS_AFTER} \
            --with-gtk=3
make
make install DESTDIR=$PKGDIR
cd $SRCDIR
