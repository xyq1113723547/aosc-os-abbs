PKGNAME=apr-util
PKGDES="The Apache Portable Runtime utilities"
PKGSEC=utils
PKGDEP="apr expat gdbm openldap unixodbc db sqlite \
        openssl mariadb"

AUTOTOOLS_AFTER="--with-apr=/usr \
                 --with-ldap \
                 --with-crypto \
                 --with-gdbm=/usr \
                 --with-sqlite3=/usr \
                 --with-odbc=/usr \
                 --with-berkeley-db=/usr \
                 --with-oracle=/usr \
                 --with-openssl=/usr \
                 --with-mysql=/usr"
ABSHADOW=0
RECONF=0
