                 --with-lqr \
                 --with-rsvg \
                 --with-openjp2 \
                 --without-gvc \
                 --with-djvu \
                 --without-autotrace \
                 --without-jbig \
                 --without-fpx \
                 --without-dps \
                 --with-fftw \
