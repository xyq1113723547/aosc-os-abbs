PKGNAME=strace
PKGSEC=devel
PKGDEP="libunwind perl"
PKGDEP__RISCV64="${PKGDEP/libunwind/}"
PKGDEP__LOONGARCH64="${PKGDEP/libunwind/}"
PKGDES="A useful diagnostic, instructional, and debugging tool"

AUTOTOOLS_AFTER__RISCV64=" \
                 ${AUTOTOOLS_AFTER} \
                 --without-libunwind \
                 --enable-mpers=no"
AUTOTOOLS_AFTER__LOONGARCH64=" \
                 ${AUTOTOOLS_AFTER} \
                 --without-libunwind \
                 --enable-mpers=no"
AUTOTOOLS_AFTER__ARM64=" \
                 ${AUTOTOOLS_AFTER} \
                 --enable-mpers=no"
AUTOTOOLS_AFTER__PPC64EL=" \
                 ${AUTOTOOLS_AFTER} \
                 --enable-mpers=no"

RECONF=0
