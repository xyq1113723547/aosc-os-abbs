PKGNAME=avahi
PKGSEC=net
PKGDES="Service Discovery for Linux using mDNS/DNS-SD"
PKGDEP="dbus-python expat libcap libdaemon nss-mdns "
PKGSUG="gtk-3 pygobject-3"
BUILDDEP="gobject-introspection intltool xmltoman pygobject-3 gtk-3"

AUTOTOOLS_AFTER="--disable-mono \
                 --disable-monodoc \
                 --disable-qt3 \
                 --disable-qt4 \
                 --disable-qt5 \
                 --disable-gtk \
                 --enable-gtk3 \
                 --enable-compat-libdns_sd \
                 --enable-compat-howl \
                 --with-distro=archlinux \
                 --with-avahi-priv-access-group=network \
                 --with-autoipd-user=avahi \
                 --with-autoipd-group=avahi \
                 --with-systemdsystemunitdir=/usr/lib/systemd/system"
ABSHADOW=0
