abinfo "Configuring..."
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/libexec --rundir=/run --dbdir=/var/lib/dhcpcd --sbindir=/usr/bin
abinfo "Making..."
make
abinfo "Installing..."
make DESTDIR="$PKGDIR" install
abinfo "Injecting noipv4ll option to config file..."
echo noipv4ll >> "$PKGDIR/etc/dhcpcd.conf"
